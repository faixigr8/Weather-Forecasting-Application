<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contentday"
    android:background="@color/wheather">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/outline"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/wheather_icon_Day2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:src="@drawable/wind"/>

            <TextView
                android:id="@+id/Temperature_Day2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/Location_Day2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PAK"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/wheather_Day2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DAY"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:layout_marginRight="133dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignRight="@id/abc">

                <TextView
                    android:id="@+id/windflow_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wind"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wind Flow"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:layout_marginRight="100dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/abc">

                <TextView
                    android:id="@+id/Preception_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/precep"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preception"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:layout_marginLeft="133dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignLeft="@id/abc">

                <TextView
                    android:id="@+id/Humdity_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="32C"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/humi"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:layout_alignRight="@id/centerabc"
                android:layout_marginRight="148dp">

                <TextView
                    android:id="@+id/hourly1_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/hourly1img_Day2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rain"/>

                <TextView
                    android:id="@+id/hourly1time_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:layout_alignRight="@id/centerabc"
                android:layout_marginRight="80dp">

                <TextView
                    android:id="@+id/hourly2_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/hourly2img_Day2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rain"/>

                <TextView
                    android:id="@+id/hourly2time_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:id="@+id/centerabc">

                <TextView
                    android:id="@+id/hourly3_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUNNY"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/hourly3img_Day2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rain"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/hourly3time_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:layout_alignLeft="@id/centerabc"
                android:layout_marginLeft="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hourly4_Day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/hourly4img_Day2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rain"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/hourly4time_Day2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:layout_alignLeft="@id/centerabc"
                android:layout_marginLeft="148dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/hourly5_Day2"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/hourly5img_Day2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rain"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/hourly5time_Day2"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>